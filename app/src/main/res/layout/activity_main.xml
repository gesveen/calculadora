<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/num4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/num1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/num2"
        app:layout_constraintStart_toEndOf="@+id/num4" />

    <Button
        android:id="@+id/num6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/num3"
        app:layout_constraintStart_toEndOf="@+id/num5" />

    <Button
        android:id="@+id/multiplicate"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="x"
        app:layout_constraintBottom_toTopOf="@+id/subtraction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/num6" />

    <Button
        android:id="@+id/division"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/multiplicate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/num9" />

    <Button
        android:id="@+id/num7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/num4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/num5"
        app:layout_constraintStart_toEndOf="@+id/num7" />

    <Button
        android:id="@+id/memorySave"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="ms"
        app:layout_constraintBottom_toTopOf="@+id/num7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/memoryRecuperate"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="mr"
        app:layout_constraintBottom_toTopOf="@+id/num8"
        app:layout_constraintStart_toEndOf="@+id/memorySave" />

    <Button
        android:id="@+id/elevate"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="^"
        app:layout_constraintBottom_toTopOf="@+id/num9"
        app:layout_constraintStart_toEndOf="@+id/memoryRecuperate" />

    <Button
        android:id="@+id/square"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="âˆš"
        app:layout_constraintBottom_toTopOf="@+id/division"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/elevate" />

    <Button
        android:id="@+id/num9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/num6"
        app:layout_constraintStart_toEndOf="@+id/num8" />

    <Button
        android:id="@+id/num2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/num0"
        app:layout_constraintStart_toEndOf="@+id/num1" />

    <Button
        android:id="@+id/num1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/send"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/subtraction"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/num3" />

    <Button
        android:id="@+id/num3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/num2" />

    <Button
        android:id="@+id/sum"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <Button
        android:id="@+id/send"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/send" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num0" />

    <Button
        android:id="@+id/clear"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="448dp"
        android:text="c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="496dp"
        android:gravity="right"
        android:text="0"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>